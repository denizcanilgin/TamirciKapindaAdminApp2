<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/White"
    tools:context=".dialog_activity">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

     <LinearLayout
         android:padding="15dp"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

        <TextView
            android:text="Müşteri Bilgileri "
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:text="E-mail: "
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/userEmail"
               android:text="Email "
               android:textSize="18dp"
               android:textColor="@color/colorPrimaryDark"

               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <TextView
               android:text="Telefon: "
               android:textSize="18dp"
               android:textStyle="bold"
               android:textColor="@color/colorPrimaryDark"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/userTelefon"
               android:text="Telefon "
               android:textSize="18dp"
               android:textColor="@color/colorPrimaryDark"

               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <TextView
               android:text="Adres: "
               android:textSize="18dp"
               android:textStyle="bold"
               android:textColor="@color/colorPrimaryDark"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/userAdres"
               android:text="Adres "
               android:textColor="@color/colorPrimaryDark"
               android:textSize="18dp"

               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <TextView
               android:text="Problem: "
               android:textSize="18dp"
               android:textStyle="bold"
               android:textColor="@color/colorPrimaryDark"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/userProblem"
               android:text="Problem "
               android:textSize="18dp"
               android:textColor="@color/colorPrimaryDark"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:textColor="@color/White"
            android:id="@+id/hizmetTamamlandi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/buton_green_bg"
            android:text="Hizmet TAMAMLANDI" />


        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp">

           <Button
               android:textColor="@color/White"
               android:id="@+id/hizmetIptal"
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:background="@drawable/button_red_bg"
               android:text="Hizmet İptal" />
           <Button
               android:textColor="@color/White"
               android:id="@+id/hizmetAskida"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               android:layout_weight="1"
               android:background="@drawable/button_gray_bg"
               android:text="Askıya Al" />
        </LinearLayout>




     </LinearLayout>

  </ScrollView>




</LinearLayout>